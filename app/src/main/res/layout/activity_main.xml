<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtNumber"
        android:textSize="120sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0000"
        android:layout_centerInParent="true" />
    <!--Button-->

    <LinearLayout
       android:layout_above="@+id/linButton"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

   <Button
       android:id="@+id/btnSwitchOn2"
       android:text="Switch ON2"
       android:layout_weight="1"
       android:layout_width="match_parent"
       android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnSwitchOFF2"
            android:text="Switch OFF2"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linButton"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnSwitchOn"
            android:text="Switch ON"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnSwitchOFF"
            android:text="Switch OFF"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
      android:layout_alignParentTop="true"
        android:layout_above="@+id/linButton"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnSwitchOn3"
            android:text="Switch ON3"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnSwitchOFF3"
            android:text="Switch OFF3"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>


</RelativeLayout>